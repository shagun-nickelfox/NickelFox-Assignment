<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".assignment0.CalculatorUI">

    <include layout="@layout/my_toolbar" />

    <View
        android:id="@+id/rectangle_2"
        android:layout_width="423dp"
        android:layout_height="537dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-23dp"
        android:background="@drawable/circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />


    <androidx.cardview.widget.CardView
        android:id="@+id/rectangle_4"
        android:layout_width="70dp"
        android:layout_height="430dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="319dp"
        android:layout_marginTop="193dp"
        app:cardBackgroundColor="@color/rectangle_4"
        app:cardCornerRadius="40dp"
        app:cardElevation="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/divide"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/divide"
            android:textColor="#FBFBFB"
            android:textSize="26sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/multiply"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="86dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/multiply"
            android:textColor="#FBFBFB"
            android:textSize="26sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/subtract"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="172dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/subtract"
            android:textColor="#FBFBFB"
            android:textSize="26sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/plus"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="258dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/plus"
            android:textColor="#FBFBFB"
            android:textSize="26sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/equal"
            android:layout_width="70dp"
            android:layout_height="86dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="344dp"
            android:background="@drawable/bar"
            android:gravity="center_horizontal|center_vertical"
            android:text="="
            android:textColor="#FBFBFB"
            android:textSize="26sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/rectangle_5"
        android:layout_width="260dp"
        android:layout_height="70dp"
        android:elevation="15dp"
        app:cardBackgroundColor="@color/rectangle_4"
        app:cardCornerRadius="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.317"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.373">

        <TextView
            android:id="@+id/ac"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:gravity="center_horizontal|center_vertical"
            android:text="AC"
            android:textColor="#FBFBFB"
            android:textSize="26sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/plusminus"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="86dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="+/-"
            android:textColor="#FBFBFB"
            android:textSize="26sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/percent"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="173dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="%"
            android:textColor="#FBFBFB"
            android:textSize="26sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@id/rectangle_2"
        app:layout_constraintEnd_toEndOf="@id/rectangle_2"
        app:layout_constraintHorizontal_bias="0.015"
        app:layout_constraintStart_toStartOf="@id/rectangle_2"
        app:layout_constraintTop_toTopOf="@id/rectangle_2"
        app:layout_constraintVertical_bias="0.724">

        <TextView
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="@drawable/bar"
            android:gravity="center"
            android:text="1"
            android:textColor="#FBFBFB"
            android:textSize="26sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="@drawable/bar"
            android:gravity="center"
            android:text="4"
            android:textColor="#FBFBFB"
            android:textSize="26sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="@drawable/bar"
            android:gravity="center"
            android:text="7"
            android:textColor="#FBFBFB"
            android:textSize="26sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="@drawable/bar"
            android:gravity="center"
            android:text="."
            android:textColor="#FBFBFB"
            android:textSize="26sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@id/rectangle_2"
        app:layout_constraintEnd_toEndOf="@id/rectangle_2"
        app:layout_constraintHorizontal_bias="0.351"
        app:layout_constraintStart_toStartOf="@id/rectangle_2"
        app:layout_constraintTop_toTopOf="@id/rectangle_2"
        app:layout_constraintVertical_bias="0.724">

        <TextView
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="@drawable/bar"
            android:gravity="center"
            android:text="2"
            android:textColor="#FBFBFB"
            android:textSize="26sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="@drawable/bar"
            android:gravity="center"
            android:text="5"
            android:textColor="#FBFBFB"
            android:textSize="26sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="@drawable/bar"
            android:gravity="center"
            android:text="8"
            android:textColor="#FBFBFB"
            android:textSize="26sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="@drawable/bar"
            android:gravity="center"
            android:text="0"
            android:textColor="#FBFBFB"
            android:textSize="26sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@id/rectangle_2"
        app:layout_constraintEnd_toEndOf="@id/rectangle_2"
        app:layout_constraintHorizontal_bias="0.669"
        app:layout_constraintStart_toStartOf="@id/rectangle_2"
        app:layout_constraintTop_toTopOf="@id/rectangle_2"
        app:layout_constraintVertical_bias="0.724">

        <TextView
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="@drawable/bar"
            android:gravity="center"
            android:text="3"
            android:textColor="#FBFBFB"
            android:textSize="26sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="@drawable/bar"
            android:gravity="center"
            android:text="6"
            android:textColor="#FBFBFB"
            android:textSize="26sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="@drawable/bar"
            android:gravity="center"
            android:text="9"
            android:textColor="#FBFBFB"
            android:textSize="26sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="@drawable/bar"
            android:gravity="center"
            android:text="00"
            android:textColor="#FBFBFB"
            android:textSize="26sp"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:id="@+id/bar_1"
        android:layout_width="175dp"
        android:layout_height="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="710dp"
        android:background="@color/bar1Color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteY="701dp" />

    <View
        android:id="@+id/bar_2"
        android:layout_width="62dp"
        android:layout_height="5dp"
        android:layout_marginBottom="508dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        android:paddingRight="25dp"
        app:layout_constraintBottom_toTopOf="@+id/rectangle_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include2"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="355dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:text="1.000 × 4 + 2 × 1 "
            android:textAlignment="textEnd"
            android:textColor="@color/text1Color"
            android:textStyle="bold"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="355dp"
            android:layout_height="50dp"
            android:textSize="40sp"
            android:textColor="@color/white"
            android:textAlignment="textEnd"
            android:textStyle="bold"
            android:text="4002"/>

    </LinearLayout>

    <View
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/ic_history"
        app:layout_constraintBottom_toTopOf="@+id/rectangle_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.97"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include2"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>